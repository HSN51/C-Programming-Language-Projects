#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
int main() {

	//int arr[] = { 10,20,30,40 };

	//ptr++  =   *(ptr +1) = 20
	//				K.N
	//ptr++ = (ptr+1)
	
	char cumlem[100];
	char* p1, * p2;			//arcra=Polindrom sayi
	int kontrol;


	printf("Lutfen maksimum 100 karakterli bir c√ºmler giriniz\n");
	gets(cumlem);

	for (p2 = cumlem; *p2; p2++);//arcra
		p2--;
	

	kontrol = 1;

	for (p1 = cumlem; p1 < p2; p1++, p2--)
	{
		if (*p1 != *p2)
		{
			kontrol = 0;
		}

	}

	if (kontrol)
	{
		printf("Girilen %s bir palindromdur", cumlem);
	}

	else 
	{
		printf("Girilen %s bir palindrom degildir", cumlem);
	}


	return 0;
}
